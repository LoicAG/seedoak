<!DOCTYPE html>
<html>
  <head>
    <title>Seedoak</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="top_bar">

      <div id="logo">
        <img src="https://placekitten.com/150/110">
      </div>

      <div id="nav">
        <%= link_to 'My Seedoak', seeds_path %> |
        <%= link_to 'Seeds', seeds_path %> |
        <%= link_to 'Our partners', partners_path %> |
        <%= link_to 'FAQ', faq_path %> |
        <%= link_to 'About Seedoak', about_path %> |

        <% if current_user %>
          <%= link_to 'Edit profile', edit_user_path(current_user.id) %> |
          <%= link_to 'Logout', logout_path, method: :post %>
        <% else %>
          <%= link_to 'Register', new_user_path %> |
          <%= link_to 'Login', login_path %>
        <% end %>
      </div>

    </div>

    <% if flash[:notice] %>
      <div>
        <p id="notice"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div>
        <p ud="alert"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
